{% extends 'blocks/module.twig' %}

{% block content %}

	<div class="row">
		{% if module.heading %}
			<div class="col-12">
				<h2 class="text-in-columns__heading">{{ module.heading }}</h2>
			</div>
		{% endif %}

		{% if module.columns %}
			{% for column in module.columns %}
				<div class="col-lg text-in-columns__col">
					<div class="text-in-columns__copy wysiwyg">
						{{ column.copy }}
					</div>
				</div>
			{% endfor %}
		{% endif %}
	</div>

{% endblock %}
